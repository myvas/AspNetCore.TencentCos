@model AspNetCore.TencentCos.ListBucketResult
@{
    ViewData["Title"] = "Objects in "+Model.Name;
}

<div class="jumbotron">
    <h1>Objects in @Model.Name</h1>
</div>
<div class="row">
    <div class="col-xs-12">
        <div>@ViewData["BucketUrl"]</div>
        <dl class="dl-horizontal">
            <dt>EncodingType</dt>
            <dd>@Model.EncodingType</dd>
            <dt>Prefix</dt>
            <dd>@Model.Prefix</dd>
            <dt>Marker</dt>
            <dd>@Model.Marker</dd>
            <dt>MaxKeys</dt>
            <dd>@Model.MaxKeys</dd>
            <dt>IsTruncated</dt>
            <dd>@Model.IsTruncated</dd>
        </dl>
    </div>
    @foreach (var item in Model.Contents)
    {
        var url = new Uri((string)ViewData["BucketUrl"]).Append(item.Key);

    <div class="col-md-4">
        <div class='panel @(item.Size=="0"?"panel-default":"panel-success")'>
            <div class="panel-heading crop" title="@item.Key">
                @item.Key
            </div>
            <div class="panel-body" style="height:350px">
                <div class="text-left">
                    @if(item.GetSize()==0){
                    <div class="break-word">@url</div>
                    }
                    else{
                    <div class="break-word">
                        <a href='@Url.Action("OpenCloudObject","Home", new { url = url})'>@url</a>
                    </div>
                    }
                </div>
                <dl>
                    <dt>Key</dt>
                    <dd class="break-word">@item.Key</dd>
                    <dt>ETag</dt>
                    <dd>@item.ETag</dd>
                    <dt>Size</dt>
                    <dd>@item.Size</dd>
                    <dt>StorageClass</dt>
                    <dd>@item.XCosStorageClassShortName</dd>
                    <dt>LastModified</dt>
                    <dd><i>@item.GetLastModified().ToLocalTime()</i></dd>
                </dl>
            </div>
        </div>
    </div>
    }
</div>